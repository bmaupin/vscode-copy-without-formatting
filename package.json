{
    "name": "copy-without-formatting",
    "displayName": "Copy without formatting",
    "description": "Copy text without formatting (syntax highlighting, font, etc)",
    "version": "0.1.0",
    "publisher": "bmaupin",
    "engines": {
        "vscode": "^1.26.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.copyWithoutFormatting"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.copyWithoutFormatting",
                "title": "Copy without formatting",
                "when": "editorHasSelection"
            }
        ],
        "keybindings": [
            {
                "command": "extension.copyWithoutFormatting",
                "key": "ctrl+shift+c",
                "mac": "shift+cmd+c",
                "when": "editorHasSelection"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "command": "extension.copyWithoutFormatting",
                    "group": "9_cutcopypaste@2",
                    "when": "editorHasSelection"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.42",
        "@types/node": "^7.0.43",
        "tslint": "^6.0.0",
        "typescript": "^2.6.1",
        "vscode": "^1.1.36"
    },
    "dependencies": {
        "clipboardy": "^1.2.3"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/bmaupin/vscode-copy-without-formatting"
    }
}
